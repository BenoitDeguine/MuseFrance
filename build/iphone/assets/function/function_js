function beautifulDate(e,t,i){var r=e.split(/[- :T]/),e=new Date(r[0],r[1]-1,r[2],r[3],r[4],0);e=e.toString("MMMM"),e=new Date(e);var a=["Janvier","Février","Mars","Avril","Mai","Juin","Juillet","Août","Septembre","Octobre","Novembre","Décembre"],n="";e.getDate();var o=e.getHours(),s=e.getMinutes();return e.setHours(0,0,0,0),s>=0&&10>s&&(s="0"+s),n=t.getTime()===e.getTime()?"Aujourd'hui à "+o+"h"+s:i.getTime()===e.getTime()?"Hier à "+o+"h"+s:e.getDate()+" "+a[e.getMonth()]+" "+e.getFullYear()+" à "+o+"h"+s}